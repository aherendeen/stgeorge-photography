---
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import siteData from "@config/siteData.json";
import { Icon } from "astro-icon/components";

import FooterLink from "./FooterLink.astro";

const today = new Date();
---

<footer class="bg-base-100/40 mt-12 flex flex-col items-center justify-center py-8">
	<div class="site-container">
		<!-- footer links -->
		<div
			class="flex w-full flex-col items-center justify-between gap-2 text-lg md:grid md:grid-cols-5"
		>
			<div class="flex justify-center py-2 text-center md:hidden">
				<SiteLogo />
			</div>
                        <div class="col-span-2 flex justify-end gap-4">
                                <FooterLink href="/">Home</FooterLink>
                                <FooterLink href="/portfolio/">Portfolio</FooterLink>
                        </div>
			<div class="hidden justify-center text-center md:flex">
				<SiteLogo />
			</div>
                        <div class="flex gap-4 md:col-span-2">
                                <FooterLink href="/about/">About</FooterLink>
                                <FooterLink href="/pricing/">Pricing</FooterLink>
                                <FooterLink href="/contact/">Contact</FooterLink>
                        </div>
		</div>

		<!-- lets connect -->
		<div class="description mx-auto mt-6 max-w-[21rem] px-4 text-center">
			<p>
				<span class="italic">Lets connect!</span> Follow my accounts to view more wedding photography
				and get inspired for your wedding.
			</p>
		</div>

		<!-- socials -->
		<div class="text-primary-500 mt-8 flex justify-center gap-4">
			<a href="https://github.com/aherendeen" target="_blank" rel="noopener noreferrer" class="social-btn group">
				<Icon name="tabler:brand-github" class="social-icon size-6" aria-hidden="true" />
				<span class="sr-only">Github</span>
			</a>
			<a href="https://x.com/_aherendeen" target="_blank" rel="noopener noreferrer" class="social-btn group">
				<Icon
					name="tabler:brand-x"
					class="social-icon size-6"
					aria-hidden="true"
				/>
				<span class="sr-only">X</span>
			</a>
			<a href="https://bsky.app/aherendeen" target="_blank" rel="noopener noreferrer" class="social-btn group">
				<Icon
					name="tabler:brand-bluesky"
					class="social-icon size-6"
					aria-hidden="true"
				/>
				<span class="sr-only">Bluesky</span>
			</a>
			<a href="https://instagram.com/andrewherendeen" target="_blank" rel="noopener noreferrer" class="social-btn group">
				<Icon
					name="tabler:brand-instagram"
					class="social-icon size-6"
					aria-hidden="true"
				/>
				<span class="sr-only">Instagram</span>
			</a>
		</div>

		<!-- copyright -->
		<div class="mt-4 mb-2 text-center text-sm opacity-80">
			&copy; {today.getFullYear()} a website by <a
				href="https://github.com/aherendeen"
				class="hover:text-primary-600 transition author-link"
				target="_blank"
				rel="noopener">Andrew Herendeen</a
			>
			<!-- {siteData.name}. All rights reserved. -->
		</div>

		<style>
		/* Only enable hover animations on devices that actually support hover (keeps mobile/touch untouched) */
		@media (hover: hover) and (pointer: fine) {
			.social-btn {
			position: relative;
			display: inline-block;
			}
			.social-icon {
			display: inline-block;
			transition: transform 260ms cubic-bezier(.2,.9,.2,1), filter 260ms, opacity 200ms;
			will-change: transform, filter, opacity;
			}
			.social-btn:hover .social-icon {
			transform: translateY(-4px) rotate(-6deg) scale(1.08);
			filter: drop-shadow(0 8px 20px rgba(0,0,0,0.12)) saturate(1.05);
			opacity: 0.98;
			}
			/* Soft glow / base under icon */
			.social-btn::after {
			content: "";
			position: absolute;
			left: 50%;
			transform: translateX(-50%);
			bottom: -6px;
			width: 0;
			height: 6px;
			background: radial-gradient(ellipse at center, rgba(99,102,241,0.14), rgba(0,0,0,0));
			opacity: 0;
			transition: width 260ms, opacity 260ms;
			pointer-events: none;
			border-radius: 999px;
			}
			.social-btn:hover::after { width: 44%; opacity: 0.45; }

			/* Footer nav underline and lift are intentionally NOT applied here so the
			   layout above socials remains unchanged per user's request. */

			/* Author link gradient underline reveal */
			.author-link {
			position: relative;
			background-image: linear-gradient(90deg, rgb(48, 22, 22), rgb(75, 78, 79));
			background-repeat: no-repeat;
			background-size: 0% 2px;
			background-position: left bottom;
			transition: background-size 240ms ease, color 200ms;
			}
			.author-link:hover { background-size: 100% 2px; color: rgb(42, 90, 110); }
		}

		/* Respect users who prefer reduced motion */
		@media (prefers-reduced-motion: reduce) {
			.social-icon, .footer-links a, .site-logo-wrap, .author-link {
			transition: none !important;
			transform: none !important;
			}
		}
		</style>
	</div>
</footer>
