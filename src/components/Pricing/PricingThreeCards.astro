---
/**
 * * Pricing cards with three cards — improved styling, smaller prices
 */

import Button from "@components/Button/Button.astro";
import { Image } from "astro:assets";

interface PricingItem {
	name: string;
	featured?: boolean;
	price: number;
	features: string[];
	image: ImageMetadata;
}

import image3 from "@assets/images/couple-1-square.jpg";
import image1 from "@assets/images/couple-5-min.jpg";
import image2 from "@assets/images/couple-6-crop.jpg";

const pricingData: PricingItem[] = [
	{
		name: "Elopement",
		featured: false,
		price: 1999,
		features: [
			"200+ Professionally Edited Photos",
			"Private Online Gallery",
			"*Additional Charge Based On Travel Distance",
			"*Additional Charge For Videography",
		],
		image: image1,
	},
	{
		name: "Wedding",
		featured: true,
		price: 2999,
		features: [
			"300+ Professionally Edited Photos",
			"Private Online Gallery",
			"All-Day Photography Coverage",
			"*Additional Charge For Videography",
		],
		image: image2,
	},
	{
		name: "Engagement",
		featured: false,
		price: 799,
		features: [
			"100+ Professionally Edited Photos",
			"Private Online Gallery",
			"*Additional Charge Based On Travel Distance",
		],
		image: image3,
	},
];
---

<section id="pricing" class="mx-auto max-w-6xl scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">Photography Packages</h2>
	</div>

	<!-- grid for pricing cards -->
	<div class="mx-auto grid w-full max-w-md gap-8 pt-8 sm:max-w-none sm:grid-cols-2 md:pt-12 lg:grid-cols-3">
		{
			pricingData.map((plan) => (
				<div
					class:list={[
						"relative flex w-full flex-col rounded-lg overflow-hidden shadow-lg ring-1 ring-black/5 transition-transform duration-200 hover:scale-[1.02]",
						{
							"bg-primary-50 scale-100 ring-primary-200": plan.featured,
							"bg-white": !plan.featured,
						},
					]}
				>
					{plan.featured ? (
						<span class="absolute top-4 right-4 z-10 rounded-full bg-primary-700 px-3 py-1 text-sm font-semibold text-white">
							Featured
						</span>
					) : null}

					<div>
						<div class="aspect-[3/4] h-auto w-full overflow-hidden">
							<Image
								src={plan.image}
								alt={plan.name}
								width={900}
								densities={[1.5, 2]}
								class="h-full w-full object-cover"
							/>
						</div>
					</div>

					<div class="flex h-full flex-col justify-between border-t-2 px-6 py-6 md:px-8 md:py-8">
						<div>
							<h3 class="h3 text-center font-semibold" aria-label={plan.name}>{plan.name}</h3>

							<ul class="mt-4 flex flex-col gap-3 px-2 text-sm leading-snug text-slate-700">
								{plan.features.map((feature) => (
									<li class="flex items-start gap-2">
										<span class="mt-0.5 text-primary-600">✓</span>
										<span>{feature}</span>
									</li>
								))}
							</ul>
						</div>

						<div class="mt-6 flex flex-col items-center">
							<p class="font-decorative text-primary-800 leading-none text-3xl md:text-4xl">
								{`$${plan.price.toLocaleString()}`}
								<span
									class="ml-2 inline-block align-baseline text-lg md:text-xl text-slate-500"
									title="Plus additional charges may apply"
									aria-label="Plus additional charges may apply"
								>+</span>
							</p>

							<p class="mt-2 text-xs text-slate-500">Starting price</p>
						</div>
					</div>
				</div>
			))
		}
	</div>

        <div class="mt-12 flex justify-center">
                <Button href="/contact/" variant="outline" class="px-8">Get a quote</Button>
        </div>
</section>
